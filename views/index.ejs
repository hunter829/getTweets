<!DOCTYPE html>
<div>
    <html>
    <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Get Tweets</title>
      <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
      <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    </head>
        <body>
          <nav class="navbar navbar-inverse bg-primary">
             <div class="container">
                 <div class="navbar-header">
                     <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                       <span class="sr-only">Toggle navigation</span>
                       <span class="icon-bar"></span>
                       <span class="icon-bar"></span>
                       <span class="icon-bar"></span>
                     </button>
                 </div>
                 <div id="navbar" class="collapse navbar-collapse">
                   <ul class="nav navbar-nav">
                     <li class="active"><a href="/">Home</a></li>
                   </ul>
                   <ul class="nav navbar-nav navbar-right">
                       <% if(!user){ %>
                           <li><a href="/login"><i class="fa fa-twitter" aria-hidden="true"></i> Log In</a></li>
                       <% } else { %>
                           <li><a href="#"><%= user.displayName %></a></li>
                           <li><a href="/logout">Log Out</a></li>
                       <% } %>
                   </ul>
                 </div>
             </div>
         </nav>
        <div class="container">
		        <div class="row">
              <div class='col-md-12'>
                <div class="container-fluid">

                  <div class="row">
                    <div class="col-md-12">
                      <div class="input-group">
                          <span class="input-group-btn">
                            <button class="btn btn-secondary" form="search-form" type="submit">Type Twitter Handle</button>
                          </span>
                          <form action="/" method="POST" id="search-form">
                            <input type="text" class="form-control" name="handle" placeholder="@twitter handle" required>
                          </form>
                      </div>
                    </div>
                  </div>

                  <div class="row">
           <% if(searched) { %>

             <div class="col-md-12">
               <div class="container-fluid">

               <% if(tweetList) { %>

                 <div class="row">
                   <div class="col-md-12">
                     <p class="lead" align="center">Found <%= tweetList.length %> Representative Tweets  Of <%= search_handle %></p>
                     <p class="lead" align="center">Those which do not show <%= search_handle %> tweets are  <%= search_handle %>'s retweets</p>
                   </div>
                 </div>

                 <div class="row text-center" style="display:flex; flex-wrap:wrap; flex-direction:row; align-items:center">
                     <% tweetList.forEach(function(tweet) { %>
                       <div class="col-md-4 col-sm-6">
                           <%- tweet %>
                       </div>
                     <% }); %>
                 </div>

               <% } else { %>

                 <div class="row">
                    <div class="col-md-12">
                      <p class="lead" align="center">No tweets found representative of <%= search_handle %></p>
                   </div>
                 </div>

               <% } %>

               </div>
             </div>

           <% } %>
          </div>

              </div>
              </div>
              </div>
        </div>

        <script>window.twttr = (function(d, s, id) {
  		  var js, fjs = d.getElementsByTagName(s)[0],
  		    t = window.twttr || {};
  		  if (d.getElementById(id)) return t;
  		  js = d.createElement(s);
  		  js.id = id;
  		  js.src = "https://platform.twitter.com/widgets.js";
  		  fjs.parentNode.insertBefore(js, fjs);

  		  t._e = [];
  		  t.ready = function(f) {
  		    t._e.push(f);
  		  };
  		  return t;
  		 }(document, "script", "twitter-wjs"));</script>

      </body>
  </html>
